{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    ["@semantic-release/npm", {
      "npmPublish": false
    }],
    ["@semantic-release/exec", {
      "prepareCmd": "node -e \"const f='.claude-plugin/plugin.json'; const p=JSON.parse(require('fs').readFileSync(f)); p.version='${nextRelease.version}'; require('fs').writeFileSync(f, JSON.stringify(p, null, 2)+'\\n')\""
    }],
    ["@semantic-release/git", {
      "assets": ["CHANGELOG.md", "package.json", ".claude-plugin/plugin.json"],
      "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
    }],
    "@semantic-release/github"
  ]
}
